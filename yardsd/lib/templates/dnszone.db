; AUTO-GENERATED BY YARDS
$ORIGIN {{data.root.dnsroot}}.
$TTL 3600
@               IN    SOA   {{ data.root.server }}. {{ data.root.contact | replace(from="@", to=".") }}. (
                              {{ now() | date(format="%Y%m%d%H%M%S") }} ; serial
                              {{ data.root.refresh }} ; refresh
                              {{ data.root.retry }} ; retry
                              {{ data.root.expire }} ; expire
                              {{ data.root.nxdomain }} ; nxdomain
                              )

{% for record in data.records %}
{% if record.recordtype is matching("\b(A|AAAA|CNAME|NS|PTR)\b") %}{{ record.key }}               {{ record.ttl }}    IN    {{ record.recordtype }}   {{ record.value }}{% elif record.recordtype == 'TXT' %}{{ record.key }}               {{ record.ttl }}    IN    {{ record.recordtype }}   "{{ record.value }}"{% elif record.recordtype == 'MX' %}{{ record.key }}               {{ record.ttl }}    IN    {{ record.recordtype }}   {{ mx[record.id].preference }}    {{ record.value }}{% elif record.recordtype == 'SRV' %}{{ record.key }}               {{ record.ttl }}    IN    {{ record.recordtype }}   {{ srv[record.id].preference }}    {{ srv[record.id].weight }}    {{ srv[record.id].port }}    {{ record.value }}{% endif %}
{% endfor %}